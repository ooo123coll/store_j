<?xml version="1.0" encoding="UTF-8"?>


<!-- Logback configuration. See http://logback.qos.ch/manual/index.html -->
<configuration scan="true" scanPeriod="10 seconds">	
	<property name="LOG_PATH" value="/opt/tomcat8/logs" />	

  <!-- Simple file output -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
  	<file>${LOG_PATH}/logapps/store_j.log</file>    
    <encoder>
        
        
        <pattern>
            [%date{yyyy-MM-dd HH:mm:ss}] %-5level\(%class{0}:%line\) - [%logger{96}] - %msg%n
        </pattern>
        
        <charset>UTF-8</charset>
    </encoder>

	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		<fileNamePattern>${LOG_PATH}/logapps/store_j_%d{yyyyMMdd}.log</fileNamePattern>
	</rollingPolicy>

    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>WARN</level>
    </filter>
  </appender>

  <!-- Console output -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">    
      <encoder>
     <pattern>
            [%date{yyyy-MM-dd HH:mm:ss}] %-5level\(%class{0}:%line\) - [%logger{96}] - %msg%n
        </pattern>
          <charset>UTF-8</charset>
      </encoder>    
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>INFO</level>
    </filter>
  </appender>

  <!-- Enable FILE and STDOUT appenders for all log messages.
       By default, only log at level INFO and above. -->
  <root level="INFO">
    <appender-ref ref="FILE" />
    <appender-ref ref="STDOUT" />
  </root>

</configuration>